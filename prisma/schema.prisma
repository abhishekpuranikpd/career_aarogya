datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  email           String   @unique
  name            String?
  mobile          String?
  resumeUrl       String?
  positionApplied String?
  jobPostId       String?  @db.ObjectId
  jobPost         JobPost? @relation(fields: [jobPostId], references: [id])

  password        String?  // Hashed password for user login
  
  examStatus      String   @default("PENDING") // PENDING, PASSED, FAILED
  responses       Response[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Superadmin {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  password String
}

model Exam {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  type      String   // YES_NO, WRITING, MIXED
  questions Question[]
  responses Response[]
  jobPosts  JobPost[]
}

type Question {
  id       String
  text     String
  options  String[] // For YES_NO technically just yes/no, but kept flexible
  correctAnswer String? // For auto-grading YES_NO
}

model Response {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  examId    String   @db.ObjectId
  exam      Exam     @relation(fields: [examId], references: [id])
  answers   Json     // Storing answers structure
  score     Int?
  submittedAt DateTime @default(now())
}

model JobPost {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  imageUrl    String?
  location    String?
  type        String?  // Full-time, Part-time, Internship
  salary      String?
  
  examId      String?  @db.ObjectId
  exam        Exam?    @relation(fields: [examId], references: [id])
  
  applicants  User[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isActive    Boolean  @default(true)
}
